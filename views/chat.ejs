<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900&display=swap" rel="stylesheet">

    <link href="../public/styles/chat.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container">
        <aside class="sidebar">
            <header class="sidebar-header">
                <div class="app-icon-name">
                    <img src="../public/img/speech-bubble.png" alt="Logo" class="logo">
                    <div class="app-name">RealTalk</div>
                </div>
            </header>
            
            <section class="chat-list">
                <div class="search-user-form">
                    <form id="searchUserForm"> <!-- Formulář pro vyhledávání uživatelů -->
                        <input type="text" id="searchUsername" placeholder="Enter username to search" required>
                        <button type="submit" id="searchButton">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>
                <div id="userResults"></div>
                <h2>Your chats</h2>
                <div id="chatList">
                    <% chats.forEach(chat => { %>
                        <div class="chat-item" data-chat-id="<%= chat.id %>">
                            <span><%= chat.name %></span>
                            <button class="delete-chat-button" data-chat-id="<%= chat.id %>">Delete</button>
                        </div>
                    <% }) %>
                </div>
            </section>
            
            <div class="sidebar-footer">
                <div class="user-info"><%= username %></div>
                <button onclick="location.href='/logout'" class="logout-button">Logout</button>
            </div>
        </aside>

        <main class="chat">
            <div id="chatTitle" class="chat-title">Chat</div>
            <div class="messages" id="messages"></div>
            <div class="input">
                <input type="text" id="messageInput" placeholder="Type your message">
                <label for="fileInput" id="file-upload-icon">
                    <i class="fas fa-paperclip"></i>
                </label>                
                <input type="file" id="fileInput" style="display: none;" />
                <span id="fileName" class="file-name">No file selected</span>
                <button id="sendButton">Send</button>
            </div>
        </main>
    </div>

    <script src="/socket.io/socket.io.js"></script> <!-- připojení knihovny pro práci se Socket.io -->

    <!-- přidání uživatelskeho ID do okna-->
    <script>
        window.userId = <%= userId %>; 
    </script>
    <script src="../public/scripts/chat-scripts.js"></script><!-- Připojení externího js souboru pro fungování chatu -->
</body>
</html>
